{
    "parser": "babel-eslint",
    "env": {
      "es6": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": ["react", "jsx-a11y", "import"],
    "rules": {
      "react/jsx-filename-extension": [
        "error",
        { "extensions": [".js", ".jsx"] }
      ],
      "import/prefer-default-export": "off",
      "react/jsx-one-expression-per-line": "off",
      "global-require": "off"
    },
    "settings": {
      "import/resolver": {
        "babel-plugin-root-import": { "rootPathSuffix": "src" }
      }
    }
  }